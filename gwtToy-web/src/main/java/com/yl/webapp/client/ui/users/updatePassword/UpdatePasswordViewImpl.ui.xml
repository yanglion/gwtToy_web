<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
			 xmlns:l="urn:import:com.yl.webapp.client.ui.login">

<ui:with type="com.yl.webapp.client.application.ApplicationResources" field="i18n" />

<g:HTMLPanel>
	<div class="col-sm-3">
		<b:Heading size="2"  ui:field="heading" text="{i18n.updatePassword_heading}" />
		<b:Paragraph ui:field="subheading"><ui:text from="{i18n.updatePassword_changePassword_message}"/></b:Paragraph>
	</div>
     
	<div class="col-sm-6">
		<b:Form type="HORIZONTAL" styleName="well form-horizontal">
		
			<b:ControlGroup ui:field="usernameControlGroup">
		        <b:ControlLabel for="username"><ui:text from="{i18n.user_username}" /> <span class="required">*</span></b:ControlLabel>
		       	<b:Controls>
		       		<b:TextBox styleName="form-control" ui:field="username" name="username" controlGroup="{usernameControlGroup}" errorLabel="{usernameErrors}" />
		       		<b:HelpInline ui:field="usernameErrors" />
		       	</b:Controls>
		    </b:ControlGroup>
       		
       		<b:TextBox styleName="form-control" ui:field="token" visible="false"/>
       		
			<b:ControlGroup ui:field="currentPasswordControlGroup">
		        <b:ControlLabel for="currentPassword"><ui:text from="{i18n.updatePassword_currentPassword_label}" /> <span class="required">*</span></b:ControlLabel>
		       	<b:Controls>
		       		<b:PasswordTextBox ui:field="currentPassword" name="currentPassword" controlGroup="{currentPasswordControlGroup}" errorLabel="{currentPasswordErrors}" />
		       		<b:HelpInline ui:field="currentPasswordErrors" />
		       	</b:Controls>
		    </b:ControlGroup>
			
			<b:ControlGroup ui:field="passwordControlGroup">
		        <b:ControlLabel for="password"><ui:text from="{i18n.updatePassword_newPassword_label}" /> <span class="required">*</span></b:ControlLabel>
		       	<b:Controls>
		       		<b:PasswordTextBox ui:field="password" name="password" controlGroup="{passwordControlGroup}" errorLabel="{passwordErrors}" />
		       		<b:HelpInline ui:field="passwordErrors" />
		       	</b:Controls>
		    </b:ControlGroup>
		
			<b:FormActions>
				<b:Button ui:field="updatePasswordButton" styleName="btn btn-primary" customIconStyle="icon-ok icon-white" text="{i18n.updatePassword_changePasswordButton}" />
				<b:Button ui:field="cancelButton" styleName="btn" customIconStyle="icon-remove" text="{i18n.button_cancel}" />
			</b:FormActions>
		
		</b:Form>
	</div>
</g:HTMLPanel>
</ui:UiBinder>
